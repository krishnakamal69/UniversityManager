
@{
    ViewBag.Title = "ManageRegistrationForm";
    //Layout = null;
}
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body style="background-color: blanchedalmond">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @*@Html.ActionLink("Application name", "Index", "Home", null, new { @class = "navbar-brand" })*@
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Register", "ManageRegistrationForm", "ManageRegistration")</li>
                        <li>@Html.ActionLink("LogIn", "ManageLogIn", "ManageRegistration")</li>
                    </ul>
                </div>
            </div>
        </div> 
        
        
        <div class="jumbotron" style="align-content: center; ">
           <p style="align-content: center"><h2 style="text-align: center">Choose Registration Form</h2></p> 
        </div>
        <hr/>
        <div class=" col-sm-12" style="background-color: bisque">
            <h3 style="text-align: center"> @Html.ActionLink("Register as a Teacher . You obviously should know the Chairman's Code", "RegisterAChairman")</h3>
            <br /><br />
            <h3 style="text-align: center"> @Html.ActionLink("Register as a Teacher . You obviously should know the Teacher's Code", "RegisterATeacher")</h3>
            <br /><br />
            <h3 style="text-align: center"> @Html.ActionLink("Register as a Student. You obviously should know the Student's Code", "RegisterAStudent")</h3>
            <br /><br />
            <h3 style="text-align: center"> @Html.ActionLink("Register as a Section . You obviously should know the Section Officer's Code", "RegisterASectionOfficer")</h3>
            <br /><br />
        </div>
    </body>
</html>
